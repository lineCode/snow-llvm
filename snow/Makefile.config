LLVM_PATH=$(LEVEL)/../llvm
LLVM_BIN_PATH=$(LLVM_PATH)/Release/bin
LLVM_LIB_PATH=$(LLVM_PATH)/Release/lib
LLVM_INCLUDE_PATH=$(LLVM_PATH)/include
LLVM_LIBS := $(wildcard $(LLVM_LIB_PATH)/*.a)

BC_CC=$(LLVM_BIN_PATH)/clang
BC_CXX=$(LLVM_BIN_PATH)/clang++
BC_LINK=$(LLVM_BIN_PATH)/llvm-link
BC_OPT=$(LLVM_BIN_PATH)/opt
CC=$(LLVM_BIN_PATH)/clang
CXX=$(LLVM_BIN_PATH)/clang++
LD=g++
AR=ar

BISON=bison
FLEX=flex

BASE_FLAGS=-I$(LEVEL)/include $(INCLUDES) -O0 -g -Wall -Werror -DDEBUG
CFLAGS=$(BASE_FLAGS) -Wno-unused -fexceptions
CXXFLAGS=$(BASE_FLAGS) -Wno-unused -fno-rtti -fexceptions -I../..
LDFLAGS=-O0 -g -dead_strip -lreadline

BC_CFLAGS=$(CFLAGS)
BC_CXXFLAGS=$(CXXFLAGS)
BC_LINKFLAGS=

# TODO: Make this cross-platform
DYNAMIC_LIBRARY_EXT=dylib
