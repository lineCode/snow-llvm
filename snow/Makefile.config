LLVM_PATH=$(LEVEL)/../llvm
LLVM_BIN_PATH=$(LLVM_PATH)/Release+Asserts/bin
LLVM_LIB_PATH=$(LLVM_PATH)/Release+Asserts/lib
LLVM_INCLUDE_PATH=$(LLVM_PATH)/include
LLVM_LIBS := $(wildcard $(LLVM_LIB_PATH)/*.a)

BC_CC=$(LLVM_BIN_PATH)/clang
BC_CXX=$(LLVM_BIN_PATH)/clang++
BC_LINK=$(LLVM_BIN_PATH)/llvm-link
CC=gcc
CXX=g++
LD=g++
AR=ar

BISON=bison
FLEX=flex

BASE_FLAGS=-I$(LLVM_INCLUDE_PATH) -I$(LEVEL)/include -g -O0 -DDEBUG -Wall -Werror
CFLAGS=$(BASE_FLAGS) -Wno-unused
CXXFLAGS=$(BASE_FLAGS) -Wno-unused -fno-rtti -I$(LEVEL)/.. -I$(LLVM_INCLUDE_PATH) 
LDFLAGS=-g -dead_strip -lreadline -L$(LLVM_LIB_PATH)

BC_CFLAGS=$(CFLAGS)
BC_CXXFLAGS=$(CXXFLAGS)
BC_LINKFLAGS=

# TODO: Make this cross-platform
DYNAMIC_LIBRARY_EXT=dylib
